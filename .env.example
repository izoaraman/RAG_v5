# Database Configuration
# PostgreSQL with PGVector extension
DATABASE_URL=postgresql://username:password@localhost:5432/rag_database

# Azure OpenAI Configuration (Required)
# Get from Azure Portal > Your OpenAI Resource > Keys and Endpoint
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# Azure OpenAI Embedding Deployment Name
# This is the deployment name you created in Azure OpenAI Studio
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small

# Model Selection (for agent/chat if needed)
LLM_CHOICE=gpt-4o-mini

# Development Settings
LOG_LEVEL=INFO
DEBUG_MODE=false

# RAG Crawler Settings
CRAWL_DELAY=1
MAX_PAGES=100
OUTPUT_DIR=output
