# ============================================
# RAG_v5 Environment Configuration
# ============================================

# Database Configuration
# Azure Database for PostgreSQL with pgvector extension
# Format: postgresql://user:password@server.postgres.database.azure.com:5432/dbname?sslmode=require
DATABASE_URL=postgresql://username:password@your-server.postgres.database.azure.com:5432/rag_database?sslmode=require

# ============================================
# Azure OpenAI Configuration (REQUIRED)
# ============================================
# Get from Azure Portal > Your OpenAI Resource > Keys and Endpoint

# API Key (Key 1 or Key 2 from Azure Portal)
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here

# Endpoint URL (e.g., https://your-resource-name.openai.azure.com/)
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/

# API Version (use latest preview for best features)
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# ============================================
# Azure OpenAI Deployments
# ============================================
# These are the deployment names you created in Azure OpenAI Studio
# NOT the model names (e.g., "my-gpt4" not "gpt-4o")

# Chat/Completion Model Deployment (for query classification and response generation)
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o

# Embedding Model Deployment (for vector search)
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small

# ============================================
# Development Settings
# ============================================
LOG_LEVEL=INFO
DEBUG_MODE=false

# ============================================
# RAG Crawler Settings (for ingestion)
# ============================================
CRAWL_DELAY=1
MAX_PAGES=100
OUTPUT_DIR=output
